{% extends 'backend.html.twig' %}
{% block title %}Editar tipo de caso {{ entity }} - SIGEUATS{% endblock %}
{% block menutipocasos %}
    {% if is_granted('ROLE_TECNICO') %}
        <li class="sub-menu">
            <a href="javascript:;" class="active">
                <i class="fa  fa-folder"></i>
                <span>Tipos de Caso</span>
            </a>
            <ul class="sub">
                <li  class="active"><a  href="{{ path('tipos-casos') }}">Mostrar tipos</a></li>
                <li><a  href="{{ path('tipos-casos_new') }}">Añadir tipo</a></li>
            </ul>
        </li>
    {% endif %}
{% endblock %}
{% block content %}
    <section id="main-content">
        <section class="wrapper">
            <div class="row mt">
                <div class="col-md-12">
                    <div class="content-panel padding-5">
                        <h4><i class="fa fa-angle-right"></i> Editar tipo de caso {{ entity }}</h4>
                        <hr>
                        <form method="post" class="form-horizontal"  {{ form_enctype(edit_form) }} action="{{ path('tipos-casos_update', {'id': entity.id}) }}">
                            <div class="form-group{% if form_errors(edit_form.nombre) %} has-error{% endif %}">
                                <label class="col-sm-2 control-label col-lg-2">Nombre</label>
                                <div class="col-lg-10">
                                    {{ form_widget(edit_form.nombre, { 'attr': {'class': 'form-control'} }) }}
                                    {% if form_errors(edit_form.nombre) %}
                                        <span class="help-block text-danger">
                                        {{ form_errors(edit_form.nombre) }}
                                    </span>
                                    {% endif %}
                                    <span class="help-block text-danger">Nombre del tipo de caso</span>
                                </div>
                            </div>
                            <div class="form-group{% if form_errors(edit_form.descripcion) %} has-error{% endif %}">
                                <label class="col-sm-2 control-label col-lg-2">Descripción</label>
                                <div class="col-lg-10">
                                    {{ form_widget(edit_form.descripcion, { 'attr': {'class': 'form-control'} }) }}
                                    {% if form_errors(edit_form.descripcion) %}
                                        <span class="help-block text-danger">
                                        {{ form_errors(edit_form.descripcion) }}
                                    </span>
                                    {% endif %}
                                    <span class="help-block text-danger">Breve descripción de los casos correspondientes a este tipo</span>
                                </div>
                            </div>
                            {{ form_row(edit_form._token) }}
                            <button class='btn btn-success' type="submit"><i class="fa fa-check-square-o"></i> Aceptar </button>
                            <a class='btn btn-danger' type="reset" href="{{ path('tipos-casos') }}"><i class="fa fa-minus-square-o"></i> Cancelar</a>

                        </form>
                    </div><!-- /content-panel -->
                </div><!-- /col-md-12 -->
            </div><!-- /row -->

        </section><! --/wrapper -->
    </section><!-- /MAIN CONTENT -->
{% endblock %}





