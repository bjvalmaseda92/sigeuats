{% extends 'backend.html.twig' %}
{% block title %}Añadir paciente - SIGEUATS{% endblock %}
{% block menupacientes %}
    {% if is_granted('ROLE_TECNICO') %}
        <li class="sub-menu">
            <a href="javascript:;"  class="active" >
                <i class="fa fa-user"></i>
                <span>Pacientes</span>
            </a>
            <ul class="sub">
                <li><a  href="{{ path('pacientes') }}">Mostrar pacientes</a></li>
                <li class="active"><a  href="{{ path('pacientes_new') }}">Añadir paciente</a></li>
            </ul>
        </li>
    {% endif %}
{% endblock %}
{% block content %}
    <section id="main-content">
        <section class="wrapper">
            <div class="row mt">
                <div class="col-md-12">
                    <div class="content-panel padding-5">
                        <h4><i class="fa fa-angle-right"></i> Nuevo paciente</h4>
                        <hr>

                        <form method="post" class="form-horizontal"  {{ form_enctype(form) }} action="{{ path('pacientes_create') }}">
                            <div class="form-group{% if form_errors(form.nombre) %} has-error{% endif %}">
                                <label class="col-sm-2 control-label col-lg-2">Nombre</label>
                                <div class="col-lg-10">
                                    {{ form_widget(form.nombre, { 'attr': {'class': 'form-control'} }) }}
                                    {% if form_errors(form.nombre) %}
                                        <span class="help-block text-danger">
                                        {{ form_errors(form.nombre) }}
                                    </span>
                                    {% endif %}
                                </div>
                            </div>
                            <div class="form-group{% if form_errors(form.apellidos) %} has-error{% endif %}">
                                <label class="col-sm-2 control-label col-lg-2">Apellidos</label>
                                <div class="col-lg-10">
                                    {{ form_widget(form.apellidos, { 'attr': {'class': 'form-control'} }) }}
                                    {% if form_errors(form.apellidos) %}
                                        <span class="help-block text-danger">
                                        {{ form_errors(form.apellidos) }}
                                    </span>
                                    {% endif %}
                                </div>
                            </div>
                            <div class="form-group{% if form_errors(form.ci) %} has-error{% endif %}">
                                <label class="col-sm-2 control-label col-lg-2">Carnet de identidad</label>
                                <div class="col-lg-10">
                                    {{ form_widget(form.ci, { 'attr': {'class': 'form-control'} }) }}
                                    {% if form_errors(form.ci) %}
                                        <span class="help-block text-danger">
                                        {{ form_errors(form.ci) }}
                                    </span>
                                    {% endif %}
                                </div>
                            </div>
                            <div class="form-group{% if form_errors(form.direccion) %} has-error{% endif %}">
                                <label class="col-sm-2 control-label col-lg-2">Dirección particular</label>
                                <div class="col-lg-10">
                                    {{ form_widget(form.direccion, { 'attr': {'class': 'form-control'} }) }}
                                    {% if form_errors(form.direccion) %}
                                        <span class="help-block text-danger">
                                        {{ form_errors(form.direccion) }}
                                    </span>
                                    {% endif %}
                                </div>
                            </div>
                            <div class="form-group{% if form_errors(form.grupoEdad) %} has-error{% endif %}">
                                <label class="col-sm-2 control-label col-lg-2">Grupo de edad</label>
                                <div class="col-lg-10">
                                    {{ form_widget(form.grupoEdad, { 'attr': {'class': 'form-control'} }) }}
                                    {% if form_errors(form.grupoEdad) %}
                                        <span class="help-block text-danger">
                                        {{ form_errors(form.grupoEdad) }}
                                    </span>
                                    {% endif %}
                                </div>
                            </div>
                            {{ form_row(form._token) }}
                            <button class='btn btn-success' type="submit"><i class="fa fa-check-square-o"></i> Crear </button>
                            <button class='btn btn-danger' type="reset"><i class="fa fa-minus-square-o"></i> Cancelar</button>

                        </form>
                    </div><!-- /content-panel -->
                </div><!-- /col-md-12 -->
            </div><!-- /row -->

        </section><! --/wrapper -->
    </section><!-- /MAIN CONTENT -->
{% endblock %}





