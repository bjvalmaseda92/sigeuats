{% extends 'backend.html.twig' %}
{% block title %}Caso {{ entity }} - SIGEUATS{% endblock %}
{% block menucasos %}
    {% if is_granted('ROLE_TECNICO') %}
        <li class="sub-menu">
            <a href="javascript:;" class="active" >
                <i class="fa  fa-folder-open"></i>
                <span>Casos</span>
            </a>
            <ul class="sub">
                <li class="active"><a  href="{{ path('casos') }}">Mostrar casos</a></li>
                <li><a  href="{{ path('casos_new') }}">Añadir caso</a></li>
            </ul>
        </li>
    {% endif %}
{% endblock %}
{% block content %}
    <section id="main-content">
        <section class="wrapper">
            <div class="row mt">
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <!-- -- BASIC BUTTONS ---->
                    <div class="showback">
                        <h3><i class="fa fa-angle-right"></i> Caso {{ entity }}</h3>
                    </div><!-- /showback -->

                </div><!-- --/col-lg-12---->
                <div class="col-lg-6 col-md-6 col-sm-12">
                    <!-- -- BASIC BUTTONS ---->
                    <div class="showback">
                        <h4><i class="fa fa-angle-right"></i> Datos del paciente</h4>
                        <p><i class="fa fa-user"></i><b> Nombre y apllidos:</b> {{ entity.paciente }}</p>
                        <p><i class="fa fa-credit-card"></i><b> Carnet de de identidad:</b> {{ entity.paciente.ci }}</p>
                        <p><i class="fa fa-map-marker"></i><b> Dirección:</b> {{ entity.paciente.direccion }}</p>
                        <p><i class="fa fa-sitemap"></i><b> Grupo de edad:</b> {{ entity.paciente.grupoEdad }}</p>


                    </div><!-- /showback -->

                </div><!-- --/col-lg-6 ---->


                <div class="col-lg-6 col-md-6 col-sm-12">
                    <!-- -- BUTTONS SIZES ---->
                    <div class="showback">
                        <h4><i class="fa fa-angle-right"></i> Datos del diagnostico</h4>
                        <p><i class="fa fa-plus-square"></i><b> Enfermedad:</b> {{ entity.enfermedad }}</p>
                        <p><i class="fa fa-tags"></i><b> Tipo de enfermedad:</b> {{ entity.enfermedad.tipoEnfermedad }}</p>
                        <p><i class="fa fa-folder"></i><b> Tipo de caso:</b> {{ entity.tipoCaso }}</p>
                        <p><i class="fa fa-ambulance"></i><b> Lugar de ingreso:</b> {{ entity.lugaringreso }}</p>
                        <p><i class="fa fa-hospital-o"></i><b> Áreade salud:</b> {{ entity.areadesalud }}</p>
                        <p><i class="fa fa-question-circle"></i><b> Otras observaciones:</b> {{ entity.info }}</p>



                    </div><!-- /showback -->


                </div><!-- /col-lg-6 -->
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <!-- -- BASIC BUTTONS ---->
                    <div class="showback">
                        <a class="btn btn-warning" href="{{ path('casos_edit', {'id': entity.id}) }}"><i class="fa fa-edit"></i> Editar</a>
                        <button title="Eliminar" data-toggle="modal" href="#Modal{{ entity.id }}" class="btn btn-danger ">
                            <i class="fa fa-trash-o "></i> Eliminar
                        </button>
                    </div><!-- /showback -->

                </div>
            </div>

        </section><! --/wrapper -->
    </section><!-- /MAIN CONTENT -->


    <div class="modal fade" id="Modal{{ entity.id }}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title">Eliminar caso</h4>
                </div>
                <div class="modal-body">
                    ¿Está seguro que desea eliminar este caso?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                    <a  href="{{ path('casos_delete', {'id': entity.id}) }}" type="button" class="btn btn-danger">Aceptar</a>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
{% endblock %}
