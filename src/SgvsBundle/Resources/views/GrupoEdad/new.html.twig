{% extends 'backend.html.twig' %}
{% block title %}A침adir grupo de edades - SIGEUATS{% endblock %}
 {% block menugrupo %}
     {% if is_granted('ROLE_TECNICO') %}
         <li class="sub-menu">
             <a href="javascript:;" >
                 <i class="fa fa-sitemap"></i>
                 <span>Grupos de edades</span>
             </a>
             <ul class="sub">
                 <li><a  href="{{ path('grupo-edades') }}">Mostrar grupos</a></li>
                 <li class="active"><a  href="{{ path('tipoenfermedad_new') }}">A침adir grupo</a></li>
             </ul>
         </li>
     {% endif %}
 {% endblock %}
{% block content %}
    <section id="main-content">
        <section class="wrapper">
            <div class="row mt">
                <div class="col-md-12">
                    <div class="content-panel padding-5">
                        <h4><i class="fa fa-angle-right"></i> Nuevo grupo de edades</h4>
                        <hr>

                        <form method="post" class="form-horizontal"  {{ form_enctype(form) }} action="{{ path('grupo-edades_create') }}">
                            <div class="form-group{% if form_errors(form.nombre) %} has-error{% endif %}">
                                <label class="col-sm-2 control-label col-lg-2">Nombre</label>
                                <div class="col-lg-10">
                                    {{ form_widget(form.nombre, { 'attr': {'class': 'form-control'} }) }}
                                    {% if form_errors(form.nombre) %}
                                        <span class="help-block text-danger">
                                        {{ form_errors(form.nombre) }}
                                    </span>
                                    {% endif %}
                                    <span class="help-block text-danger">Ejemplo: 0-12</span>
                                </div>
                            </div>
                            <div class="form-group{% if form_errors(form.descripcion) %} has-error{% endif %}">
                                <label class="col-sm-2 control-label col-lg-2">Descripci칩n</label>
                                <div class="col-lg-10">
                                    {{ form_widget(form.descripcion, { 'attr': {'class': 'form-control'} }) }}
                                    {% if form_errors(form.descripcion) %}
                                        <span class="help-block text-danger">
                                        {{ form_errors(form.descripcion) }}
                                    </span>
                                    {% endif %}
                                    <span class="help-block text-danger">Breve descripci칩n del grupo de edad</span>
                                </div>
                            </div>
                            {{ form_row(form._token) }}
                            <button class='btn btn-success' type="submit"><i class="fa fa-check-square-o"></i> Crear </button>
                            <a class='btn btn-danger' type="reset" href="{{ path('pacientes') }}"><i class="fa fa-minus-square-o"></i> Cancelar</a>

                        </form>
                    </div><!-- /content-panel -->
                </div><!-- /col-md-12 -->
            </div><!-- /row -->

        </section><! --/wrapper -->
    </section><!-- /MAIN CONTENT -->
{% endblock %}





